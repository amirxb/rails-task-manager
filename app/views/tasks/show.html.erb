<div class ="container mt-5 ms-3">
  <h1><%= @task.title %></h1>

  <div class="card bg-light p-3 mb-3">
    <p><%= @task.details %></p>
  </div>

  <div class="form-check mb-3">
    <%= check_box_tag "completed", "1", @task.completed, disabled: true, class: "form-check-input" %>
    <label class="form-check-label">
      <%= @task.completed ? "The task is completed" : "The task is not completed yet" %>
    </label>
  </div>

  <%= link_to "Back to list", tasks_path %>
</div>
